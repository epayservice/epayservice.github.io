

{% set items = [
  { dir: 'up', titleI18n: 'fees.moneyTransfersUS.item1title', descrI18n: 'fees.moneyTransfersUS.toWallet', fee: '2% + 20&nbsp;USD' },
  { dir: 'up', titleI18n: 'fees.moneyTransfersUS.item2title', fee: '0.8% + 30&nbsp;USD' },
  { dir: 'down', titleI18n: 'fees.moneyTransfersUS.item3title', descrI18n: 'fees.moneyTransfersUS.toAccount', fee: '0.5% + 25&nbsp;USD' },
  { dir: 'down', titleI18n: 'fees.moneyTransfersUS.item4title', fee: 'To be specified' }
]%}

<div class="exchange__item" id="ach-directdeposit">
  <h1 class="exchange__title title">
    {{ 'fees.moneyTransfersUS.title' | i18n }}
  </h1>

  <div class="exchange__link">
    <a class="link-arr" href="bank-transfers.html">
      {{ 'fees.moneyTransfersUS.linkText' | i18n }}
    </a>
  </div>

  <div class="exchange__row">
    <div class="exchange__numbers row row-eq-height">
      <div class="col-sm-6 col-xs-4">
        <div class="text">
          {{ 'fees.moneyTransfersUS.direction' | i18n }}
        </div>
      </div>

      <div class="col-sm-3 col-xs-4">
        <div class="text">
          {{ 'fees.moneyTransfersUS.fee' | i18n }}
        </div>
      </div>

      <div class="col-sm-3 col-xs-4">
        <div class="text"></div>
      </div>
    </div>
  </div>

  {% for item in items %}
  <div class="exchange__row">
    <div class="exchange__numbers row row-eq-height">
      <div class="col-sm-6 col-xs-4">
        <div class="exchange__direction {% if item.dir === 'down' %}exchange__direction_down{% endif %} text-dark text-dark_big">
          <span>{{ item.titleI18n | i18n }}</span>
        </div>

        {% if item.descr %}
        <div class="text">{{ item.descrI18n | i18n }}</div>
        {% endif %}
      </div>

      <div class="col-sm-6 col-xs-8">
        <div class="text-dark text-dark_big">
          {{ item.fee | safe }}
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>